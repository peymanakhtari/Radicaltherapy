
@{
    ViewData["Title"] = "LoginMethod";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="padding-top:8rem;width:100%;text-align:center">
    @if (ViewBag.sms)
    {
    <form dir="rtl" id="MyForm" class="form" method="post" action="/Home/LoginMethod">
        <div class="form-group">
            <label  class="lbl-username"> موبایل خود را وارد کنید</label>
            <input type="number" id="inputUsername" style="font-family: Arial, Helvetica, sans-serif;" placeholder="09123456789" class="form-control txt-username"  name="username" />
            <input hidden type="number" name="sms" value="1" />
        </div>
        <span class="d-none" style="color:red;margin-right:8px">نامعتبر</span>
        <br /><br />
        <input id="submitbtn" onclick="replacebtnMobile()" class="btn=submit-username btn btn-success"  value="تایید" />
        <button id="submitbtnWaiting" style="min-width:8rem;display:none" class="btn btn-success" disabled>
            کمی صبر کنید  <span style="margin-bottom:3px;margin-right:4px" class="spinner-border spinner-border-sm "></span>
        </button>
    </form>
    }
    else
    {
        <form  dir="rtl" class="form" method="post" action="/Home/LoginMethod">
            <div class="form-group">
                <label class="lbl-username">ایمیل خود را وارد کنید </label>
                <input id="inputUsername" style="font-family:Arial;min-width:19rem" placeholder="example@gmail.com" class="txt-username form-control" type="email" name="username" oninput="setCustomValidity('')" oninvalid="this.setCustomValidity('ایمیل نا معتبر')" required />
                <input hidden type="number" name="sms" value="0" />
            </div><br /><br />
            <input id="submitbtn" onclick="replacebtnEmail()" class="btn=submit-username btn btn-success" type="submit" value="تایید" />
            <button id="submitbtnWaiting" style="min-width:8rem;display:none" class="btn btn-success" disabled>
                کمی صبر کنید  <span style="margin-bottom:6px;margin-right:4px" class="spinner-border spinner-border-sm "></span>
            </button>
        </form>
    }

</div>

<script>
    window.addEventListener("pageshow", function (event) {
        var historyTraversal = event.persisted ||
            (typeof window.performance != "undefined" &&
                window.performance.navigation.type === 2);
        if (historyTraversal) {
            // Handle page restore.
            window.location.reload();
        }
    });
</script>