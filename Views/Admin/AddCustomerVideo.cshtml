@model RadicalTherapy.Data.model.CustomerVideo
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddCustomerVideo</title>
    <link href="~/css/StyleSheet-Radical.min.css" rel="stylesheet" />
</head>

<body>

    <br /><br /><br /><br />
    <a style="font-size:26px" href="@Url.Action("Index")">صفحه اصلی</a><br /><br />
    <a style="font-size:26px" href="@Url.Action("customerVideo")">برگشت</a>
    <br /><br />
    <form action="/Admin/AddOrEditVideo" method="post">
        <div style="width: 20rem;">
           <input type="number" value="@Model.Id" name="id" hidden/>
            link
